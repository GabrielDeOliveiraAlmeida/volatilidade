@Article{RePEc:anp:econom:v:12:y:2011:i:2:239_261,
  author={Rosangela Cavaleri and Eduardo Pontual Ribeiro},
  title={{Combinação de Previsões de Volatilidade: Um Estudo}},
  journal={Economia},
  year=2011,
  volume={12},
